<div class="row">
  <div class="col-md-6 col-md-offset-1">
      <div class="form-group">
        <label for="url"><%= Api.han(:url) %></label>
        <input type="text" class="form-control" id="url" name="api[url]" placeholder="example: /api/profile">
      </div>
      <div class="form-group">
        <label for="comment"><%= Api.han(:comment) %></label>
        <input type="text" class="form-control" id="comment" name="api[comment]" placeholder="optional">
      </div>
      <div class="form-group">
        <label for="method"><%= Api.han(:method) %></label>
        <select class="form-control" name="api[method]" id="method">
          <option value="GET">GET</option>
          <option value="POST">POST</option>
          <option value="PUT">PUT</option>
          <option value="PATCH">PATCH</option>
          <option value="DELETE">DELETE</option>
        </select>
      </div>
      <div class="form-group">
        <label for="data"><%= Api.han(:response) %></label>
        <textarea class="form-control" rows="10" id="data" name="api[data]" placeholder="{ 'data': { 'mobile': 110 } }"></textarea>
      </div>
      <button type="submit" class="btn btn-primary pull-right" id="create"><%= t('submit') %></button>
  </div>
  <div class="col-md-5">
    <h1>Api</h1>
    <% @apis.each do |api| %>
      <div id="api-<%= api.id %>">
        <p>
          <span class="label <%= method_label(api.method) %>"><%= api.method %></span>
          <span><%= api.comment %></span>
          <span class="pull-right">
            <%= api.url %>
            <button type="button" data-id="<%= api.id %>" class="edit btn btn-link glyphicon glyphicon-pencil"></button>
            <button type="button" data-id="<%= api.id %>" class="remove btn btn-link glyphicon glyphicon-remove"></button>
          </span>
        </p>
        <hr>
      </div>
    <% end %>
  </div>
</div>

<div class="modal fade" id="editModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= t('edit') %></h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="edit_url"><%= Api.han(:url) %></label>
            <input type="text" class="form-control" id="edit_url" name="api[url]">
          </div>
          <div class="form-group">
            <label for="edit_comment"><%= Api.han(:comment) %></label>
            <input type="text" class="form-control" id="edit_comment" name="api[comment]" placeholder="optional">
          </div>
          <div class="form-group">
            <label for="edit_method"><%= Api.han(:method) %></label>
            <select class="form-control" name="api[method]" id="edit_method">
              <option value="GET">GET</option>
              <option value="POST">POST</option>
              <option value="PUT">PUT</option>
              <option value="PATCH">PATCH</option>
              <option value="DELETE">DELETE</option>
            </select>
          </div>
          <div class="form-group">
            <label for="edit_data"><%= Api.han(:response) %></label>
            <textarea class="form-control" rows="10" name="data" id="edit_data"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <span class="hide" id="tip"><%= t('save_msg') %></span>
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('close') %></button>
        <button type="button" class="btn btn-primary" id="update"><%= t('save') %></button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="removeModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= t('delete') %></h4>
      </div>
      <div class="modal-body">
        <p><%= t('delete_msg') %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('close') %></button>
        <button type="button" class="btn btn-primary" id="confirmRemove"><%= t('confirm') %></button>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag 'apis' %>